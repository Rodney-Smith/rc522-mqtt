[Unit]
Description = RC522 to MQTT gateway service
After = network.target

[Service]
Type=simple
ExecStart=/usr/bin/env python3 /opt/scripts/rfid/readRFID.py
WorkingDirectory=/opt/scripts/rfid
TimeoutStartSec=120
TimeoutStopSec=30
Restart=always
RestartSec=10
WatchdogSec=60
User=pi

[Install]
WantedBy=multi-user.target
